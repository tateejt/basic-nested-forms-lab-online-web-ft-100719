<%= form_for @recipes do |f| %>
<p>Title: <%= f.text_field :title %></p>
  <ul>
    <%= f.fields_for :ingredients do |ingredients| %>
    <li>
      name: <%= ingredient.text_field :name %>
      qty: <%= ingredient.text_field :quality %>
    </li>
    <% end %>
    <%= link_to 'add ingredient', @recipe %>
  </ul>
